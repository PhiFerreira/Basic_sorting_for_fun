#include <cinttypes>
#include <string>

//For funs.... and learning of course


uint64_t descendingOrder(uint64_t a)
{
  bool unsorted = true;
  //Num digits
  if (a < 10){
    return a;
  }
  else{
    auto s = std::to_string(a);
    int temp = 0;
    while(unsorted){
      unsorted = false;
      for(unsigned long i = 0; i < s.length()-1; i++){
        if(s[i] < s[i+1]){
          temp = s[i];
          s[i] = s[i+1];
          s[i+1] = temp;
          unsorted = true;
        }
        std::cout << s[i] << std::endl;
      }
    }
    return stoi(s);
  }
  
}
